# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Groq Configuration (Optional)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-70b-versatile

# Qdrant Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=llm_research_papers
QDRANT_API_KEY=

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=llm_research_hub
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Airflow Configuration
AIRFLOW_HOME=/opt/airflow
AIRFLOW_UID=50000
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__SQL_ALCHEMY_CONN=postgresql+psycopg2://airflow:airflow@postgres/airflow
AIRFLOW__CORE__FERNET_KEY=
AIRFLOW__CORE__LOAD_EXAMPLES=False
AIRFLOW__WEBSERVER__SECRET_KEY=

# Grafana Configuration
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Application Configuration
APP_ENV=development
LOG_LEVEL=INFO
DEBUG=False

# Data Ingestion Settings
INITIAL_PAPER_COUNT=50
DAILY_INGESTION_SCHEDULE=0 2 * * *  # 2 AM daily
ARXIV_SEARCH_QUERY=cat:cs.CL AND (ti:large language model OR abs:large language model OR ti:LLM OR abs:LLM)
SEMANTIC_SCHOLAR_QUERY=large language models

# RAG Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RETRIEVAL=10
SIMILARITY_THRESHOLD=0.7
ENABLE_HYBRID_SEARCH=True
ENABLE_RERANKING=True
ENABLE_QUERY_REWRITING=True

# Agent Configuration
AGENT_MAX_ITERATIONS=5
AGENT_TIMEOUT=300

# Monitoring Configuration
ENABLE_MONITORING=True
METRICS_PORT=9090

# Blog Scraping URLs
OPENAI_BLOG_URL=https://openai.com/blog
ANTHROPIC_BLOG_URL=https://www.anthropic.com/news
